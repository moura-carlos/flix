<% if @movies.present? %>
  <h2>
    <%= @genre.name %>
  </h2>
  <ul>
    <% @movies.each do |movie| %>
      <li>
        <%= link_to movie.title, movie %>
      </li>
    <% end %>
  </ul>
<% end %>
<% if current_user_admin? %>
  <%= link_to "New Genre", new_genre_path, class: "btn btn-success btn-sm" %>
  <%= link_to "Edit Genre", edit_genre_path(@genre), class: "btn btn-success btn-sm" %>
<%end %>
