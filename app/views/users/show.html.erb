<section class="user">
  <%= profile_image(@user) %>
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  <h3><%= @user.username %></h3>
  <p>
    Member since <%= @user.created_at.strftime("%B %Y") %>
  </p>
  <div class="actions">
    <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
    <%= link_to "Delete Account", user_path(@user), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to permanently delete your account?" }, class: "button delete" %>
  </div>
</section>