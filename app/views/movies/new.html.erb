<div class="container">
  <h1>Create a New Movie</h1>
  <%= form_with(model: @movie) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :rating %>
    <%= f.text_field :rating %>

    <%= f.label :total_gross %>
    <%= f.number_field :total_gross %>

    <%= f.label :released_date %>
    <%= f.date_select :released_date, {}, { class: 'date' } %>

    <%= f.submit %>
  <% end %>
</div>
