<ul>
  <% @movies.each do |movie| %>
    <li>
      <strong>
        <%= movie.title %>
      </strong>
      (<%= movie.rating %>):
      <%= number_to_currency(movie.total_gross, precision: 0) %>
      <p>
        <%= movie.description %>
      </p>
      <%= movie.released_on %>
    </li>
  <% end %>
</ul>
